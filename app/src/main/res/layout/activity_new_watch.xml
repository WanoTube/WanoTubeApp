<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="videoViewModel"
            type="com.wanotube.wanotubeapp.viewmodels.WanoTubeViewModel" />
        <variable
            name="commentViewModel"
            type="com.wanotube.wanotubeapp.viewmodels.CommentViewModel" />
    </data>
    <FrameLayout
        android:id="@+id/activity_watch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.watch.WatchActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/video_layout"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    app:controller_layout_id="@layout/watch_player_control_view"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:id="@+id/video_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="@dimen/title_text_size"
                                android:text="Title"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="300"
                                android:text="Subtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">

                                <com.like.LikeButton
                                    app:icon_type="thumb"
                                    app:icon_size="10dp"
                                    android:id="@+id/like_button"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/total_likes"
                                    android:layout_margin="5dp"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/like_total_default">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/comment"/>
                                <TextView
                                    android:id="@+id/total_comments"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/comment_total_default"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/share_button"
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/share"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View style="@style/Divider.Horizontal"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/avatar_author"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/user"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"

                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/author_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:text="@string/author_s_name"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/author_s_followers"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="end">
                                <Button
                                    android:id="@+id/follow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/follow"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/dark_pink">
                                </Button>
                            </LinearLayout>
                        </LinearLayout>
                        <View style="@style/Divider.Horizontal"/>
                        <ScrollView
                            android:id="@+id/comment_list"
                            android:visibility="visible"
                            android:layout_marginRight="18dp"
                            android:layout_marginLeft="18dp"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/first_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="16dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:text="@string/comments"/>

                                            <TextView
                                                android:id="@+id/comment_total"
                                                android:layout_marginStart="8dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/comment_total_default"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/avatar_comment_author"
                                        android:layout_width="@dimen/avatar_size"
                                        android:layout_height="@dimen/avatar_size"
                                        android:layout_gravity="center"
                                        android:src="@drawable/user"/>
                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:stretchColumns="1"
                                        android:shrinkColumns="0"
                                        android:orientation="horizontal">
                                        <TableRow
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <EditText
                                                android:id="@+id/comment_edit_text"
                                                android:layout_column="1"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginEnd="8dp"
                                                android:textSize="@dimen/normal_text_size"
                                                android:maxLength="2000"
                                                android:imeOptions="actionSend|flagNoEnterAction"
                                                android:inputType="textCapSentences"
                                                android:hint="@string/comment_placeholder">
                                            </EditText>
                                            <ImageView
                                                android:id="@+id/btn_send_comment"
                                                android:visibility="gone"
                                                android:layout_width="@dimen/avatar_size"
                                                android:layout_height="@dimen/avatar_size"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_send_comment"/>
                                        </TableRow>
                                    </TableLayout>

                                </LinearLayout>
                                <View style="@style/Divider.Horizontal"/>
                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/all_comments"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                                </androidx.core.widget.NestedScrollView>


                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>