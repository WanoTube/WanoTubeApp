<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.edit.UploadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/thumbnail_video_upload"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail"/>

            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/thumbnail_video_upload"
                android:layout_alignBottom="@+id/thumbnail_video_upload"
                android:layout_margin="8dp"
                android:text="00:10"
                android:background="@color/black"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>
    <View style="@style/Divider.Horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/component_start_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/user"/>
        <TextView
            android:layout_marginStart="@dimen/layout_start_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"/>
    </LinearLayout>
    <View style="@style/Divider.Horizontal"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:scrollbars="vertical"
            android:paddingTop="2dp"
            android:id="@+id/video_caption"
            android:layout_column="1"
            android:textSize="@dimen/title_text_size"
            android:lines="2"
            android:maxLength="2000"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@android:color/transparent"
            android:hint="@string/title_placeholder">
        </EditText>
    </LinearLayout>
    <View style="@style/Divider.Horizontal"/>

</LinearLayout>